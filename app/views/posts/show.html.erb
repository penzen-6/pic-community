<div id="post-show">
    <div id="form-block">
        <h2>投稿詳細</h2>

        <h2>Content Title</h2>
        <%= @post.content_title %>

        <h2>Content</h2>
        <%= @post.content %>

        <h2>Image</h2>
        <% if @post.images.attached? %>
          <div class="images">
            <% @post.images.each do |image|%>
              <%= image_tag image %>
            <% end %>
          </div>
        <% end %>
        
        

    </div>
</div>